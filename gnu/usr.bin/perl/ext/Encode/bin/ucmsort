#!/usr/local/bin/perl
#
# $Id: ucmsort,v 1.1.1.2 2004/08/09 17:45:59 millert Exp $
#
use strict;
my @lines;
my ($head, $tail);
while (<>){
    unless (m/^<U/o){
        unless(@lines){
	    $head .= $_;
	}else{ 
	    $tail .= $_;
	}
	next;
    }
    chomp;
    push @lines,[ split ];
}

print $head;
for (sort {
    $a->[0] cmp $b->[0] # Unicode descending order
	or $a->[2] cmp $b->[2] # fallback descending order
	    or $a->[1] cmp $b->[1] # Encoding descending order
	}
	      @lines) {
    print join(" " => @$_), "\n";
}
print $tail;
__END__
